<h1>Listing rota</h1>

<table>
  <thead>
    <tr>
      <th>Week</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rota.each do |rotum| %>
      <tr>
        <td><%= rotum.week %></td>
        <td><%= link_to 'Show', rotum %></td>
        <td><%= link_to 'Edit', edit_rotum_path(rotum) %></td>
        <td><%= link_to 'Destroy', rotum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rotum', new_rotum_path %>
